<table>
  <thread>
    <tr>
      <th>Id</th>
      <th>Name</th>
      <th>Description</th>
      <th>Location</th>
      <th>Next direction</th>
    </tr>
  </thread>
  <tbody>
    <% @stops.each do |stop| %>
      <tr>
        <td><%= stop.id %></td>
        <td><%= stop.name %></td>
        <td><%= stop.description %></td>
        <td><%= stop.location %></td>
        <td><%= stop.next_direction %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<div>
<h3>Import a CSV File</h3>
  <%= form_tag import_stops_path, multipart: true do %>
    <%= file_field_tag :file %>
    <%= submit_tag "Import CSV" %>
  <% end %>
</div>
